<h1>Список товара</h1>
<table>
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th>Цена</th>
    <th>Фото</th>
  </tr>

<% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, group_product_path(@group, product)%></td>
      <td><%= product.pr_description %></td>
      <td><%= product.price %></td>
      <td><% product.images.each do |image| %>
        <%= image_tag(image.file_url(:thumb)) %></td>
      <% end %>
    <tr>
<% end %>
</table>

