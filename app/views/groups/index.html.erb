<h1>Каталог</h1>


<table>
  <tr>
    <th>Каталог</th>
    <th>Описание</th>
    <th>Фото</th>
  </tr>
 
  <% @groups.each do |group| %>
    <tr>
      <td><%= link_to group.title, group_path(group) %></td>
      <td><%= group.text %></td>
      <td><% group.images.each do |image| %>
        <%= image_tag(image.file_url(:thumb)) %></td>
      <% end %>
    </tr>
  <% end %>
</table>

